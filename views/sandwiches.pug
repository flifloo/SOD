extends layout

block content
    div#date-selector.card
        label(for="date")=__("date")
        input#date(type="date" value=date)
    div.card
        h1=__("sandwiches")
        each sandwich in sandwiches
            div.sandwich
                h2 #{sandwich.name}: #{sandwich.dataValues.number}

    script(src="/javascripts/sandwiches.js")
